{
  "extends": "./tsconfig.build.json",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@aries-framework/*": ["packages/*/src"]
    }
  },
  "include": [
    "packages",
    "./.eslintrc.js",
    "./jest.config.ts",
    "./jest.config.base.ts",
    "types",
    "tests",
    "samples",
    "scripts"
  ],
  "exclude": ["node_modules", "build"]
}
