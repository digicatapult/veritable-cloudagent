{
  "extends": "./tsconfig.build.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "compilerOptions": {
    "paths": {
      "@aries-framework/rest": ["./src"],
      "@src": ["src"],
      "@src/*": ["./src/*"],
      "@schema/*": ["./schema/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["mocha", "node"]
  },
  "exclude": ["node_modules", "build"]
}
