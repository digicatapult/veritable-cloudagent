  "scripts": {
    "check-types": "npm run check-types:build && npm run check-types:tests",
    "check-types:tests": "tsc -p tsconfig.test.json --noEmit",
    "check-types:build": "tsc --noEmit -p tsconfig.build.json",
    "prettier": "echo prettier '**/*.+(js|json|ts|md|yml|yaml)'",
    "format": "echo npm run prettier --write",
    "check-format": "echo npm run prettier --list-different",
    "test-root": "echo TBD",
    "test-watch-root": "echo TBD",
    "lint": "echo eslint --ignore-path ../.gitignore .",
    "validate": "echo npm run lint && npm run check-types && npm run check-format",
    "prepare": "echo husky install",


    "tsoa": "tsoa spec-and-routes",
    "dev": "tsoa spec-and-routes && tsnd --respawn samples/sampleWithApp.ts",
    "build": "npm run clean && npm run compile",
    "clean": "rimraf -rf ./build",
    "compile": "tsoa spec-and-routes && tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "test": "echo TBD",
    "test-watch": "echo TBD",
    "test-watch-fast": "echo TBD"
  },

