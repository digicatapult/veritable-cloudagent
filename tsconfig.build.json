{

  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext", 
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    // "lib": [],  //commenting this out fixes fetch error in src/ipfs/index.ts
    "types": [],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build",
    "moduleResolution": "node"

  },
  "include": ["src/**/*", "src/routes"],

  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts",
    "**/__tests__/*.ts",
    "**/__mocks__/*.ts",
    "__tests__/*.ts",
    "__mocks__/*.ts",
    "build/**",
    "scripts"
  ]

}
