{
  "node-option": ["import=@digicatapult/tsimp/import"],
  "ignore": ["/build/", "/node_modules/", "./build/", "./node_modules/"],
  "timeout": 5000,
  "extension": ["test.ts"],
  "bail": false,
  "package": "./package.json",
  "exclude": "node_modules/**/*",
  "watch": false,
  "fullTrace": false,
  "ui": "bdd",
  "color": true,
  "recursive": true,
  "reporter": "spec",
  "slow": 100,
  "retries": 0,
  "exit": true
}
