{
  "name": "@digicatapult/veritable-cloudagent",
  "version": "0.7.0",
  "main": "build/index",
  "type": "module",
  "types": "build/index",
  "files": [
    "build"
  ],
  "keywords": [
    "OpenAPI",
    "Blockchain"
  ],
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "description": "Rest endpoint wrapper for using your agent over HTTP",
  "homepage": "https://github.com/digicatapult/veritable-cloudagent#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/veritable-cloudagent.git"
  },
  "bin": {
    "afj-rest": "bin/afj-rest.js"
  },
  "scripts": {
    "check-types": "npm run check-types:build && npm run check-types:tests",
    "check-types:tests": "tsc -p tsconfig.test.json --noEmit",
    "check-types:build": "tsc --noEmit -p tsconfig.build.json",
    "depcheck": "depcheck",
    "prettier": "prettier '**/*.+(js|json|ts|md|yml|yaml)'",
    "format": "npm run prettier --write",
    "check-format": "npm run prettier --list-different",
    "lint": "eslint .",
    "validate": "npm run lint && npm run check-types && npm run check-format",
    "prepare": "test -d node_modules/husky && husky install || echo \"husky is not installed\"",
    "tsoa": "tsoa spec-and-routes",
    "dev": "tsoa spec-and-routes --ignore src/routes.ts --ignore src/swagger.json && tsc && ./bin/afj-rest.js start --ipfs-origin http://localhost:5001 --opa-origin http://localhost:8181 --config samples/cliConfig.json",
    "build": "npm run clean && npm run compile",
    "clean": "rimraf -rf ./build",
    "compile": "tsoa spec-and-routes && tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "test": "mocha --config .mocharc.json tests/unit/**/*.test.ts **/__tests__/*.test.ts",
    "test:integration": "mocha --config .mocharc.json tests/integration/**/*.test.ts",
    "test-watch": "npm run test -- --watch --watch-files src/,tests/unit/",
    "test-watch-fast": "TS_NODE_TRANSPILE_ONLY=true npm run test-watch"
  },
  "dependencies": {
    "@credo-ts/anoncreds": "^0.5.2",
    "@credo-ts/askar": "^0.5.2",
    "@credo-ts/core": "^0.5.2",
    "@credo-ts/node": "^0.5.2",
    "@hyperledger/anoncreds-nodejs": "^0.2.2",
    "@hyperledger/aries-askar-nodejs": "^0.2.1",
    "@tsoa/runtime": "^4.1.3",
    "@types/ws": "^7.4.7",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "did-resolver": "^4.1.0",
    "express": "^4.18.1",
    "http-errors": "^2.0.0",
    "ref-struct-di": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.4.0",
    "tslog": "^3.3.3",
    "tsoa": "^4.1.2",
    "tsyringe": "^4.7.0",
    "undici": "^5.23.0",
    "ws": "^7.5.9",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^10.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.11.16",
    "@types/node-fetch": "^2.6.11",
    "@types/ref-struct-di": "^1.1.9",
    "@types/sinon": "^10.0.15",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^5.0.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "ngrok": "^4.3.1",
    "prettier": "^2.8.8",
    "sinon": "^15.2.0",
    "supertest": "^6.2.3",
    "tsconfig-paths": "^4.2.0",
    "tsimp": "^2.0.11",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">= 20"
  },
  "overrides": {
    "ref-napi": "npm:@2060.io/ref-napi"
  }
}
