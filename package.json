{
  "name": "@digicatapult/veritable-cloudagent",
  "version": "0.9.14",
  "main": "build/index",
  "type": "module",
  "types": "build/index",
  "files": [
    "build"
  ],
  "keywords": [
    "OpenAPI",
    "Blockchain"
  ],
  "author": "Digital Catapult",
  "license": "Apache-2.0",
  "description": "Rest endpoint wrapper for using your agent over HTTP",
  "homepage": "https://github.com/digicatapult/veritable-cloudagent#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digicatapult/veritable-cloudagent.git"
  },
  "bin": {
    "afj-rest": "bin/afj-rest.js"
  },
  "scripts": {
    "check-types": "npm run check-types:build && npm run check-types:tests",
    "check-types:tests": "tsc -p tsconfig.test.json --noEmit",
    "check-types:build": "tsc --noEmit -p tsconfig.build.json",
    "depcheck": "depcheck",
    "prettier": "prettier './(src|tests|bin|samples)/**/*.+(js|json|ts|md|yml|yaml)'",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "lint": "eslint .",
    "validate": "npm run lint && npm run check-types && npm run check-format",
    "prepare": "test -d node_modules/husky && husky install || echo \"husky is not installed\"",
    "tsoa": "tsoa spec-and-routes",
    "dev": "tsoa spec-and-routes --ignore src/routes.ts --ignore src/swagger.json && tsc && ./bin/afj-rest.js start ",
    "build": "npm run clean && npm run compile",
    "clean": "rimraf -rf ./build",
    "compile": "tsoa spec-and-routes && tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "test": "mocha --config .mocharc.json tests/unit/**/*.test.ts **/__tests__/*.test.ts",
    "test:integration": "mocha --config .mocharc.json tests/integration/**/*.test.ts",
    "test-watch": "npm run test -- --watch --watch-files src/,tests/unit/",
    "test-watch-fast": "TS_NODE_TRANSPILE_ONLY=true npm run test-watch"
  },
  "dependencies": {
    "@credo-ts/anoncreds": "^0.5.3",
    "@credo-ts/askar": "^0.5.3",
    "@credo-ts/core": "^0.5.3",
    "@credo-ts/drpc": "^0.5.3",
    "@credo-ts/node": "^0.5.3",
    "@hyperledger/anoncreds-nodejs": "^0.2.2",
    "@hyperledger/aries-askar-nodejs": "^0.2.1",
    "@tsoa/runtime": "^6.3.0",
    "@types/ws": "^8.5.10",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "did-resolver": "^4.1.0",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "http-errors": "^2.0.0",
    "pino": "^9.2.0",
    "ref-struct-di": "^1.1.1",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.3.1",
    "tsyringe": "^4.8.0",
    "undici": "^6.18.2",
    "ws": "^8.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/chai": "^4.3.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.7",
    "@types/node-fetch": "^2.6.11",
    "@types/pino": "^7.0.5",
    "@types/ref-struct-di": "^1.1.12",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "chai": "^5.1.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "mocha": "^10.4.0",
    "ngrok": "^4.3.3",
    "prettier": "^3.3.2",
    "sinon": "^18.0.0",
    "supertest": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsimp": "^2.0.11",
    "typescript": "~5.5.2"
  },
  "engines": {
    "node": ">= 20"
  },
  "overrides": {
    "ref-napi": "npm:@2060.io/ref-napi"
  }
}
