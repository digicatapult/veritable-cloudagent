{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    // "lib": [],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "baseUrl": ".",
    "paths": {
      "@aries-framework/rest": ["packages/rest/src"]
    },
    "types": ["mocha", "node"]
  },
  "include": ["tests", "samples", "**/tests", "**/samples"],
  "exclude": [
    "node_modules",
    "build",
    "build/**",
    "**/build/**",
    "**/__tests__/*.ts",
    "**/__mocks__/*.ts",
    "__tests__/*.ts",
    "__mocks__/*.ts",
    "build/**",
    "scripts"
  ]
}
